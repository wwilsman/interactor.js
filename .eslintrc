parser: babel-eslint
extends: standard
env:
  browser: true
plugins:
  - babel
rules:
  babel/no-unused-expressions: warn
  no-sequences: off
  no-unused-expressions: off
  prefer-const: off
  promise/param-names: off
  semi: [error, always]
  space-before-function-paren:
    - error
    - anonymous: never
      asyncArrow: always
      named: never
