{
  "extends": "standard",
  "parser": "babel-eslint",
  "extends": [
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "indent": ["error", 2]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
