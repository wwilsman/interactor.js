{
  "name": "interactor.js",
  "description": "Composable, immutable, asynchronous way to interact with the DOM",
  "version": "3.0.0",
  "license": "MIT",
  "repository": "https://github.com/wwilsman/interactor.js",
  "type": "module",
  "main": "lib/index.js",
  "browser": "bundle/interactor.js",
  "exports": {
    "module": "./lib/index.js",
    "default": "./dist/interactor.js"
  },
  "files": [
    "bundle",
    "lib"
  ],
  "scripts": {
    "build": "rollup --config",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "nyc npm run test:only",
    "test:debug": "npm run test:only -- --debug",
    "test:only": "NODE_ENV=test node tests/start.js",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern www ."
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-html": "^1.0.2",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-virtual": "^3.0.1",
    "assert": "^2.0.0",
    "babel-plugin-istanbul": "^6.1.1",
    "eslint": "^8.34.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "istanbul-lib-coverage": "^3.2.0",
    "jsdom": "^22.1.0",
    "moonshiner": "^0.13.1",
    "nyc": "^15.1.0",
    "rollup": "^3.25.1",
    "rollup-plugin-glob-import": "^0.5.0"
  }
}
