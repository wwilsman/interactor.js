{
  "name": "interactor.js",
  "description": "Composable, immutable, asynchronous way to interact with the DOM",
  "version": "2.0.0-beta.12",
  "license": "MIT",
  "repository": "https://github.com/wwilsman/interactor.js",
  "type": "module",
  "main": "lib/index.js",
  "browser": "dist/interactor.js",
  "exports": {
    "module": "./lib/index.js",
    "default": "./dist/interactor.js"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "rollup --config",
    "test": "npm run lint && npm run test:coverage",
    "test:only": "NODE_ENV=test node ./tests/start.js",
    "test:coverage": "nyc --check-coverage npm run test:only",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern www .",
    "docs": "cd www && npm install --legacy-peer-deps"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-html": "^1.0.2",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-virtual": "^3.0.1",
    "assert": "^2.0.0",
    "babel-plugin-istanbul": "^6.1.1",
    "eslint": "^8.34.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "istanbul-lib-coverage": "^3.2.0",
    "jsdom": "^22.1.0",
    "moonshiner": "^0.9.0",
    "nyc": "^15.1.0",
    "rollup": "^2.26.11",
    "rollup-plugin-glob-import": "^0.5.0"
  }
}
