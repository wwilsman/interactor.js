{
  "name": "interactor.js",
  "description": "Composable, immutable, asynchronous way to interact with the DOM",
  "version": "3.0.0",
  "license": "MIT",
  "repository": "https://github.com/wwilsman/interactor.js",
  "type": "module",
  "main": "lib/index.js",
  "browser": "bundle/interactor.js",
  "exports": {
    "module": "./lib/index.js",
    "default": "./dist/interactor.js"
  },
  "files": [
    "bundle",
    "lib"
  ],
  "scripts": {
    "build": "rollup --config",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "nyc npm run test:only",
    "test:debug": "npm run test:only -- --debug",
    "test:only": "NODE_ENV=test node tests/start.js",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern www ."
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-html": "^1.0.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-virtual": "^3.0.2",
    "babel-plugin-istanbul": "^6.1.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "istanbul-lib-coverage": "^3.2.2",
    "moonshiner": "^0.14.0",
    "nyc": "^15.1.0",
    "rollup": "^4.9.6",
    "rollup-plugin-glob-import": "^0.5.0"
  }
}
